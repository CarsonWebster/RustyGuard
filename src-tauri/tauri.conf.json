{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "rustyguard",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"shell": {
				"sidecar": true,
				"scope": [
					{ "name": "src/count", "sidecar": true }
				]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [
				"src/count"
			],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.carsonwebster.rustyguard",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "RustyGuard",
				"width": 800
			}
		],
		"cli": {
			"description": "Intrusion Detection System (IDS) application designed in Rust and SvelteKit packaged with Tauri.",
			"longDescription": "RustyGuard is an Intrusion Detection System that leverages the efficiency of the Rust programming language to monitor and filter malicious network traffic in real-time. It combines a high-performance backend with an intuitive SvelteKit based frontend, enabling users to easily configure the system via a Tauri packaged desktop application.",
			"beforeHelp": "Before help message",
			"afterHelp": "After help message",
			"args": [
				{
					"name": "echo",
					"short": "e",
					"takesValue": false,
					"multiple": false
				}
			]
		}
	}
}
